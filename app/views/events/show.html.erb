<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:event_date) %>:</strong></dt>
  <dd><%= @event.event_date.strftime("%d %B, %Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @event.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_amount) %>:</strong></dt>
  <dd><%= @event.total_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_type_id) %>:</strong></dt>
  <dd><%= @event.event_type.name %></dd>
  <dt><strong>Bill Paid Users:</strong></dt>
  <dd><% @event.billpaidusers.each do |bill| %>
      <%= bill.user.name %> <strong>Paid</strong> Rs. <%= bill.paid_amt %><br>
    <% end %>    
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),events_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),edit_event_path(@event), :class => 'btn btn-default' %>